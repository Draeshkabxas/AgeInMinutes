<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE YOUR"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textColor="@color/brawn"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:padding="15dp"
        android:background="@color/ageTextBackgroundColor"
        android:textColor="@color/ageTextColor"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN MINUTES"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textColor="@color/brawn"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:backgroundTint="@color/selectDateButtonBackgroundColor"
        android:textColor="@color/selectDateButtonTextColor"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="@color/brawn"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECTED DATE"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/lightGrayTextColor"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvSelectedDateInMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="15dp"
        android:textSize="35sp"
        android:textColor="@color/brawn"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In minutes till date"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/lightGrayTextColor"
        android:textStyle="bold"
        />






</LinearLayout>